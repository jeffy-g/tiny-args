{
  "compilerOptions": {
    "newLine": "LF",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "removeComments": false,
    "moduleResolution": "node16",
    "allowJs": true,
    "checkJs": true,
    "target": "es2019",
    "module": "node16",
    "outDir": "./build",
    "paths": {
      "*": [
        "./*"
      ]
    },
  },
  "include": [
    "./src/*.js",
    "./index.d.ts",
  ]
}